<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.ssafy.yamyam_coach.mapper.user.UserMapper">

    <insert id="insert" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO users (email, password, nickname, name, created_at, updated_at)
        VALUES (#{email}, #{password}, #{nickname}, #{name}, #{createdAt}, #{updatedAt})
    </insert>

    <select id="findById" resultType="User">
        SELECT *
        FROM users
        WHERE id = #{userId}
    </select>

</mapper>
